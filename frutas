						using System;
using System.Collections.Generic;
using System.Text;

namespace FRUTAS
{
   public class fruta
    {
        private int id;
        private string nombre;
        private string tipo;
        private double peso;
        private decimal precio;
        //2.1-declaracion de clases,atributos,metodos y encapsulamiento
        //2.2-instanciacion de una clase
        //2.3-referencia al objeto actual 

        //para invocar el objeto privado 
        public int Id
        {
            get { return id;}
            set { id = value;}
        }
        public string Nombre
        {
            get { return nombre; }
            set { nombre = value;}
        }
        public string Tipo
        {
            get { return tipo;}
            set { tipo = value;}
        }
        public double Peso
        {
            get { return peso;}
            set { peso = value;}
        }
        public decimal Presio
        {
            get { return precio;}
            set { precio = value;}
        }

        public void Mostrar_fruta(fruta frutax)
        {
            Console.WriteLine(frutax.Id + " " + frutax.Nombre + " " + frutax.Peso + " " + frutax.Presio + " " + frutax.Tipo);
        }
    }
}

            frutax3.Tipo = "nose";
